{
  "python": {
    "command": "pyright-langserver",
    "args": ["--stdio"],
    "transport": "stdio",
    "extensionToLanguage": {
      ".py": "python",
      ".pyi": "python"
    },
    "workspaceFolder": "${CLAUDE_PROJECT_DIR}",
    "startupTimeout": 10000,
    "restartOnCrash": true,
    "maxRestarts": 3
  }
}
